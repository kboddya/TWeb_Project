@{
    ViewBag.Title = "About";
}

<section class="inner-content">
    <h2 class="section-title divider mb-2"> Contacts </h2>

    <div class="row md-4">
        <div class="col-md-6">
            <div class="info-wrap">
                <div class="mb-1">
                    <h3 class="item-title">Address:</h3>
                    <p class="mb-1">bd.Moscova, mun.Chisinau</p>
                </div>

                <div class="mb-1">
                    <h3 class="item-title">Call us:</h3>
                    <p class="mb-1">+373 69 527 365</p>
                </div>

                <div class="mb-1">
                    <h3 class="item-title">Email us:</h3>
                    <p class="mb-1">bookshop@example.com</p>
                </div>
            </div>
        </div>

        <!-- Map is now in the same col-md-6 as the contact info, shifted to the left -->
        <div class="col-md-6">
            <div class="map-container mt-3"
                 style="position: relative; width: 100%; margin-left: -20%; height: 100%; max-height: 450px;">
                <iframe width="120%" height="100%"
                        frameborder="0" scrolling="no"
                        marginheight="0" marginwidth="0"
                        src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=bd.%20Moscova,%20Chisinau+(BookShop)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
                </iframe>
            </div>
        </div>
    </div>

    <!-- Section for Questions and Form -->

    <div class="banner-content">
        <h2 class="section-title divider mb-5">Questions</h2>

        <div class="row md-4">
            <div class="col-md-6">
                <div class="info-wrap">
                    <div class="mb-1">
                        <div class="contact-form">
                            <form action="/About/SendMessage" method="POST">
                                <div class="row">
                                    <div class="form-group mb-3 col-md-6">
                                        <label for="yourName">Your Name</label>
                                        <input type="text" class="form-control" id="yourName" name="yourName" required>
                                    </div>

                                    <div class="form-group mb-3 col-md-6">
                                        <label for="yourEmail">Your Email</label>
                                        <input type="email" class="form-control" id="yourEmail" name="yourEmail"
                                               required>
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="subject">Subject</label>
                                    <input type="text" class="form-control" id="subject" name="subject">
                                </div>

                                <div class="form-group mb-3">
                                    <label for="message">Message</label>
                                    <textarea class="form-control" id="message" name="message" rows="4"
                                              required></textarea>
                                </div>

                                <a href="#" class="btn btn-outline-accent btn-accent-arrow"
                                   onclick="this.closest('form').submit(); return false;" tabindex="0">
                                    Send message <i class="icon icon-ns-arrow-right"></i>
                                </a>

                            </form>

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

