
@{
    ViewBag.Title = "Index";
}
@model BookShopProject.Models.BookList

<section id="popular-books" class="bookshelf py-5 my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">


                <div class="section-header align-center">
                    <div>
                        <h2 class="section-title">Popular books</h2>
                    </div>
                </div>
                <div class="row">

                    @foreach (var prod in Model.Products)
                        {
                            <div class="col-md-3">
                                <div class="product-item">
                                    <figure class="product-style">
                                        <a href="@Url.Action("BookInfo", "Book")?ISBN=@prod.ISBN">
                                            <img src="@prod.Image" alt="Books" class="product-item">
                                        </a>
                                        <a href="@Url.Action("Index", "Cart")?ISBN=@prod.ISBN" class="add-to-cart" data-product-tile="add-to-cart">Add to
                                            Cart
                                        </a>
                                    </figure>
                                    <figcaption>
                                        <a href="@Url.Action("BookInfo", "Book")?ISBN=@prod.ISBN">
                                            <h3>@prod.Title</h3>
                                        </a>
                                        <span>@prod.AuthorFirstName @prod.AuthorLastName</span>
                                        <div class="item-price">
                                            @if(prod.DiscountedPrice != decimal.MinusOne)
                                            {
                                                <span class="prev-price">$ @prod.DiscountedPrice</span>
                                            }
                                            $ @prod.Price
                                        </div>
                                    </figcaption>
                                </div>

                            </div>
                            }

                </div>
            </div>
        </div>
    </div>
</section>

