@{
    ViewBag.Title = "UserDetails";
    Layout = "../Shared/_AdminLayout.cshtml";
}
@model BookShopProject.Models.User


<section class="py-5 my-5">
    <div class="container">
        <div class="row">

            <div class="section-header align-center" style="margin-bottom: 0.5rem;">
                <div>
                    <h2 class="section-title" style="margin-bottom: 25px;">User Details</h2>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card p-4 shadow-sm mb-4" style="border-radius: 15px; background-color: #f8f9fa;">
                        <div class="row">
                            <div class="info-wrap" style="margin-top: 1px;">

                                <h4 class="mb-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" viewBox="0 0 448 512">
                                        <!--Copyright 2025 Fonticons, Inc.-->
                                        Copyright 2025 Fonticons, Inc.-->
                                        <path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512l388.6 0c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304l-91.4 0z" />
                                    </svg>
                                    Name:
                                </h4>
                                <p style="margin-bottom: 20px;">@Model.Name</p>

                                <h4 class="mb-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 512 512">
                                        <!-- Copyright 2025 Fonticons, Inc.-->
                                        <path d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48L48 64zM0 176L0 384c0 35.3 28.7 64 64 64l384 0c35.3 0 64-28.7 64-64l0-208L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z" />
                                    </svg>
                                    Email:
                                </h4>
                                <p style="margin-bottom: 20px;">@Model.Email</p>


                                <h4 class="mb-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" viewBox="0 0 576 512">
                                        <!--Copyright 2025 Fonticons, Inc.-->
                                        <path d="M336 352c97.2 0 176-78.8 176-176S433.2 0 336 0S160 78.8 160 176c0 18.7 2.9 36.8 8.3 53.7L7 391c-4.5 4.5-7 10.6-7 17l0 80c0 13.3 10.7 24 24 24l80 0c13.3 0 24-10.7 24-24l0-40 40 0c13.3 0 24-10.7 24-24l0-40 40 0c6.4 0 12.5-2.5 17-7l33.3-33.3c16.9 5.4 35 8.3 53.7 8.3zM376 96a40 40 0 1 1 0 80 40 40 0 1 1 0-80z" />
                                    </svg>
                                    Role:
                                </h4>
                                <p style="margin-bottom: 20px;">@Model.Role</p>

                                <h4 class="mb-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" viewBox="0 0 512 512">
                                        <!--Copyright 2025 Fonticons, Inc.-->
                                        Copyright 2025 Fonticons, Inc.-->
                                        <path d="M495.9 166.6c3.2 8.7 .5 18.4-6.4 24.6l-43.3 39.4c1.1 8.3 1.7 16.8 1.7 25.4s-.6 17.1-1.7 25.4l43.3 39.4c6.9 6.2 9.6 15.9 6.4 24.6c-4.4 11.9-9.7 23.3-15.8 34.3l-4.7 8.1c-6.6 11-14 21.4-22.1 31.2c-5.9 7.2-15.7 9.6-24.5 6.8l-55.7-17.7c-13.4 10.3-28.2 18.9-44 25.4l-12.5 57.1c-2 9.1-9 16.3-18.2 17.8c-13.8 2.3-28 3.5-42.5 3.5s-28.7-1.2-42.5-3.5c-9.2-1.5-16.2-8.7-18.2-17.8l-12.5-57.1c-15.8-6.5-30.6-15.1-44-25.4L83.1 425.9c-8.8 2.8-18.6 .3-24.5-6.8c-8.1-9.8-15.5-20.2-22.1-31.2l-4.7-8.1c-6.1-11-11.4-22.4-15.8-34.3c-3.2-8.7-.5-18.4 6.4-24.6l43.3-39.4C64.6 273.1 64 264.6 64 256s.6-17.1 1.7-25.4L22.4 191.2c-6.9-6.2-9.6-15.9-6.4-24.6c4.4-11.9 9.7-23.3 15.8-34.3l4.7-8.1c6.6-11 14-21.4 22.1-31.2c5.9-7.2 15.7-9.6 24.5-6.8l55.7 17.7c13.4-10.3 28.2-18.9 44-25.4l12.5-57.1c2-9.1 9-16.3 18.2-17.8C227.3 1.2 241.5 0 256 0s28.7 1.2 42.5 3.5c9.2 1.5 16.2 8.7 18.2 17.8l12.5 57.1c15.8 6.5 30.6 15.1 44 25.4l55.7-17.7c8.8-2.8 18.6-.3 24.5 6.8c8.1 9.8 15.5 20.2 22.1 31.2l4.7 8.1c6.1 11 11.4 22.4 15.8 34.3zM256 336a80 80 0 1 0 0-160 80 80 0 1 0 0 160z" />
                                    </svg>
                                    Change user role:
                                </h4>

                                @using (Html.BeginForm("UserDetails", "Admin", FormMethod.Post, new { @style = "margin-bottom: 16px;" }))
                                {
                                    @Html.HiddenFor(m => m.Id)
                                    @Html.HiddenFor(m => m.Name)
                                    @Html.HiddenFor(m => m.Email)
                                    @Html.HiddenFor(m => m.Password)
                                    @Html.HiddenFor(m => m.LastLoginTime)
                                    @Html.HiddenFor(m => m.RegisterTime)



                                    @Html.DropDownListFor(m => m.Role, new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "user", Value = "user" },
                                        new SelectListItem { Text = "admin", Value = "admin" },
                                        new SelectListItem { Text = "author", Value = "author" },
                                        new SelectListItem { Text = "moderator", Value = "moderator" }
                                    }, new { @class = "form-select mb-3" })

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary" style="width: 240px; height: 45px; border-radius: 8px;">
                                            Change
                                        </button>
                                    </div>
                                }


                                <h4 class="mb-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" viewBox="0 0 448 512">
                                        <!--Copyright 2025 Fonticons, Inc.-->
                                        Copyright 2025 Fonticons, Inc.-->
                                        <path d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z" />
                                    </svg>
                                    Delete user:
                                </h4>

                                <div class="d-flex justify-content-center">
                                    <a href="@Url.Action("DeleteUser")?id=@Model.Id" class="btn btn-danger" style="width: 240px; height: 45px; border-radius: 8px;" onclick="return confirm('Are you sure you want to delete this user?');">
                                        Delete
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-2">
            <a href="@Url.Action("UserControlPanel", "Admin")" class="btn btn-outline-accent btn-accent-arrow" style="max-width: 150px; width: auto;">
                &#8592; Back
            </a>
        </div>

    </div>       
</section>
