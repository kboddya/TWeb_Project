@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<link href="~/Content/Styles/custom.css" rel="stylesheet" />

<div class="d-flex justify-content-center align-items-center admin-dashboard-container">
    <div class="card admin-main-card">
        <div class="row g-5">
            <!-- Admin Sidebar -->
            <div class="col-md-3">
                <div class="d-flex flex-column gap-3">
                    <div class="admin-sidebar">
                        <h5 class="sidebar-heading">Admin Panel</h5>
                        <div class="d-flex flex-column gap-2">
                            <a href="#" class="sidebar-link active-account-tab">Dashboard</a>
                            <a href="#" class="sidebar-link">Books</a>
                            <a href="#" class="sidebar-link">Orders</a>
                            <a href="#" class="sidebar-link">Customers</a>
                            <a href="#" class="sidebar-link">Settings</a>
                        </div>
                    </div>
                    <button class="btn btn-danger signout-btn">Sign Out</button>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <!-- Books Management -->
                <div class="card management-card">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4>Books Management</h4>
                        <button class="btn btn-primary">Add New Book</button>
                    </div>
                    <div class="table-responsive">
                        <table class="table admin-table">
                            <!-- Table content remains same -->
                        </table>
                    </div>
                </div>

                <!-- Orders Management -->
                <div class="card management-card">
                    <h4 class="mb-4">Recent Orders</h4>
                    <div class="table-responsive">
                        <table class="table admin-table">
                            <thead>
                                <tr>
                                    <!-- Table headers -->
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span class="badge status-badge bg-success">Completed</span></td>
                                </tr>
                                <!-- More rows -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>