@{
    ViewBag.Title = "BookInfo";
}
@model BookShopProject.Models.Book

<section class="my-5 py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="rating disabled star5" style="margin-bottom: 0px;">
                    <a href="#">★</a>
                    <a href="#">★</a>
                    <a href="#">★</a>
                    <a href="#">★</a>
                    <a href="#">★</a>
                </div>
                <div class="book-image">
                    <img src="@Model.Image" alt="book" class="img-fluid">
                </div>
            </div>

            <div class="col-md-9">

                <div class="product-style want-be-normal-left-margin-book-only-on-pc">
                    <figcaption>
                        <h3 class="book-name" style="margin-bottom: 0;">@Model.Title</h3>
                        <a href="@Url.Action("Details", "Author")?Id=@Model.AuthorId"><span>@Model.AuthorFirstName @Model.AuthorLastName</span></a>
                        <div class="item-price">
                            @if (Model.DiscountedPrice != decimal.MinusOne)
                            {
                                <span class="prev-price">$ @Model.Price</span>
                                <span>$ @Model.DiscountedPrice</span>
                            }
                            @if (Model.DiscountedPrice == decimal.MinusOne)
                            {
                                <span>$ @Model.Price</span>
                            }
                        </div>
                    </figcaption>
                </div>

                <div class="row">
                    <div class="col-md-3 book-parameters">
                        <p class="margin-button-10">Genre</p>
                        <a href="@Url.Action("BookList")?Genre=@Model.Genre" class="tags-of-parameters rounded-corners">@Model.Genre</a>
                    </div>
                    <div class="col-md-3 book-parameters">
                        <p class="margin-button-10">Language</p>
                        <a href="#" class="tags-of-parameters rounded-corners">@Model.Language</a>
                    </div>

                    <div class="col-md-3 book-parameters">
                        <p class="margin-button-10">Year</p>
                        <a href="#" class="tags-of-parameters rounded-corners">@Model.PublishDate.Year</a>
                    </div>
                    <div class="col-md-3 book-parameters">
                        <p class="margin-button-10">Publisher</p>
                        <a href="#" class="tags-of-parameters rounded-corners">@Model.Publisher</a>
                    </div>


                </div>
                <button class="rounded-corners">Add to cart</button>
                <span>@Model.Count available</span>

            </div>
            <div>
                <p class="book-description">
                    @foreach (var c in Model.Description)
                    {
                        if(c == '\n')
                        {
                            <br>
                        }
                        else
                        {
                            @c
                        }
                    }
                </p>

                <form id="review-form">
                    <div class="form-group">
                        <label for="review-text">Your review:</label>
                        <textarea id="review-text" class="form-control" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="rounded-corners">Send</button>
                </form>

            </div>
        </div>
    </div>
</section>
