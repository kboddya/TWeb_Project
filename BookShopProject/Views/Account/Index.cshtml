@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}
@model BookShopProject.Models.UserMinimal

<div class="d-flex justify-content-center align-items-center min-vh-100 py-5">
    <div class="card p-5" style="width: 100%; max-width: 1200px; background-color: #f8f9fa; border-radius: 15px;">
        <div class="row g-5">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h4 class="mb-0">Account Information</h4>
                <!-- Sign Out Button right of Account Info -->
                <button class="btn btn-danger px-4 py-2 ms-4"
                        style="border-radius: 25px;">
                    <a href="@Url.Action("SignOut")">Sign Out</a>
                </button>
            </div>
            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size: 14px; color: #6c757d;">Name</label>
                        <p class="mb-0" style="font-size: 15px; font-weight: 500;">@Model.Name</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size: 14px; color: #6c757d;">Email</label>
                        <p class="mb-0" style="font-size: 15px; font-weight: 500;">@Model.Email</p>
                    </div>
                </div>
            </div>

            <hr/>

            <!-- Cart Items -->
            <div class="d-flex align-items-center mb-4">
                <h4 class="mb-0 me-2">Cart Items</h4>
                <small>
                    <a href="@Url.Action("Index", "Cart")" class="text-decoration-none link-danger fs-5"
                       style="vertical-align: middle;">
                        <span style="font-size: 1.15em;">&#8594;</span>
                    </a>
                </small>
            </div>
            <div class="d-flex flex-column gap-3 mb-4">
                <!-- Cart Item -->
                <div class="d-flex align-items-center justify-content-between p-3 bg-white rounded">
                    <div class="d-flex align-items-center gap-3">
                        <img src="https://via.placeholder.com/80"
                             class="rounded"
                             style="width: 60px; height: 60px; object-fit: cover;">
                        <div>
                            <p class="mb-0" style="font-size: 15px; font-weight: 500;">Product Name</p>
                            <p class="mb-0 text-muted" style="font-size: 14px;">$49.99</p>
                        </div>
                    </div>
                </div>
                <!-- Repeat cart items -->
            </div>

            <hr/>

            <!-- Purchase History -->
            <h4 class="mb-4">Purchase History</h4>
            <div class="d-flex flex-column gap-3">
                <div class="d-flex justify-content-between align-items-center p-3 bg-white rounded">
                    <div>
                        <p class="mb-0" style="font-size: 15px; font-weight: 500;">Order #12345</p>
                        <p class="mb-0 text-muted" style="font-size: 14px;">March 15, 2024</p>
                    </div>
                    <span class="badge bg-success">Delivered</span>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .active-account-tab {
        color: #0d6efd !important;
        font-weight: 500;
    }

    .card {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .btn, .nav-link {
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
    }
</style>